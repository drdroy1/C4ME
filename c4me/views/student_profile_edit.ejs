<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Helps high school students decide where to apply for college" />
    <meta name="keywords" content="" />
    <meta name="author" content="Andrew Cao, Qihong Jiang, Maggie Zhou" />
    <title>C4me | Student</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="../css/style.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
</head>

<body>
    <header>
        <div class="container-fluid">
            <nav class="navbar navbar-expand-sm navbar-light bg-light fixed-top border-bottom">
                <a class="navbar-brand ml-4 " href="/student"><img src="../img/c4me_logo_(transparent).png"></a>
                <h2 class="mr-auto">| Student</h2>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#topNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="topNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="/messages">Messages</a>
                        </li>
                        <li class="nav-item">
                            <a href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>

            </nav>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky" id="sideNav">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/student/profile">
                                Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/student/search">
                                Search for Colleges
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Search Similar High Schools
                            </a>
                        </li>
                    </ul>
            </nav>
        </div>
    </div>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <section id="pageName">
                <div class="container md-4">
                    <h1> Student Profile</h1>
                </div>
            </section>
        </div>
        <section id="info">
            <form id="edit_profile" method='post' action='/student/edit'>
                <nav>
                    <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home"
                            role="tab" aria-controls="nav-home" aria-selected="true">General Info</a>
                        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile"
                            role="tab" aria-controls="nav-profile" aria-selected="false">College Application</a>
                        <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact"
                            role="tab" aria-controls="nav-contact" aria-selected="false">Security</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active border pt-3" id="nav-general" role="tabpanel"
                                aria-labelledby="nav-general-tab">
                                <div class="container">
                                    <h3>Personal Information</h3>
                                    <div class="form-group form-inline">
                                        <label for="firstName" class="mr-3">First Name</label>
                                        <input type="text" id="firstName" class="form-control" name="firstName">
                                    </div>
                                    <div class="form-group form-inline">
                                        <label for="lastName" class="mr-3">Last Name</label>
                                        <input type="text" id="lastName" class="form-control" name="lastName">
                                    </div>
                                    <div class="form-group form-inline">
                                        <label for="age" class="mr-3">Age</label>
                                        <input type="text" id="age" class="form-control" name="age">
                                    </div>

                                    <br>
                                    <div class="border-bottom border-dark"></div>
                                    <br>

                                    <h3>Contact Information</h3>
                                    <div class="form-group form-inline">
                                        <label for="email" class="mr-3">Email</label>
                                        <input type="text" id="email" class="form-control" name="email">
                                    </div>
                                    <div class="form-group form-inline">
                                        <label for="home" class="mr-3">Home Phone</label>
                                        <input type="text" id="home" class="form-control" name="home">
                                    </div>
                                    <div class="form-group form-inline">
                                        <label for="mobile" class="mr-3">Mobile Phone</label>
                                        <input type="text" id="mobile" class="form-control" name="mobile">
                                    </div>

                                    <br>
                                    <div class="border-bottom border-dark"></div>
                                    <br>

                                    <h3>Academics</h3>
                                    <div class="form-group form-inline">
                                        <label for="currentSchool" class="mr-3">Current School</label>
                                        <input type="text" id="currentSchool" class="form-control" name="currentSchool">
                                    </div>
                                    <div class="form-group form-inline">
                                        <label for="gradYear" class="mr-3">Graduation Year</label>
                                        <input type="text" id="gradYear" class="form-control" name="gradYear">
                                    </div>
                                    <div class="form-group form-inline">
                                        <label for="gpa" class="mr-3">GPA</label>
                                        <input type="text" id="gpa" class="form-control" name="gpa">
                                    </div>
                                    <div class="form-group form-inline">
                                        <label for="sat_math" class="mr-3">SAT Math</label>
                                        <input type="text" id="sat_math" class="form-control" name="sat_math">
                                    </div>
                                    <div class="form-group form-inline">
                                        <label for="sat_ebrw" class="mr-3">SAT EBRW</label>
                                        <input type="text" id="sat_ebrw" class="form-control" name="sat_ebrw">
                                    </div>
                                    <div class="form-group form-inline">
                                        <label for="act" class="mr-3">ACT Composite</label>
                                        <input type="text" id="act" class="form-control" name="act">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade active border pt-3" id="nav-profile" role="tabpanel"
                        aria-labelledby="nav-profile-tab">
			<form action='/student/profile/edit' method='POST'>
                        <table id="acceptanceDecisions" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-center">College Name</th>
                                    <th scope="col" class="text-center">College Decision</th>
                                    <td scope="col" class="text-center"><input type="button"
                                            class="btn btn-info add-new" id="addrow" value="Add New"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><input type="text" id="collegeName" class="form-control" name="collegeName">
                                    </td>
                                    <td><select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="state">
                                            <option value="1">Applied</option>
                                            <option value="2">Accepted</option>
                                            <option value="3">Waitlisted</option>
                                            <option value="4">Rejected</option>
                                        </select>
                                    </td>
                                    <td align="center"><input type="button" class="ibtnDel btn btn-md btn-danger"
                                            value="Delete">
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                    </div>
                </div>
                <br>
                <center>
                    <button type="submit" class="btn btn-secondary" style="width:125px;" value="Submit">Submit</button>
                </center>
                <br>
            </form>
        </section>
    </main>
</body>


<script>
    $(document).ready(function () {
        var counter = 0;

        $("#addrow").on("click", function () {
            var newRow = $("<tr>");
            var cols = "";

            cols += '<td><input type="text" class="form-control" name="name' + counter + '"/></td>';
            cols += '<td><select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" <option value="0"> </option> <option value="1">Applied</option> <option value="2">Accepted</option> <option value="3">Waitlisted</option> <option value="4">Rejected</option>' + counter + '"/></td>';

            cols += '<td align="center"><input type="button" class="ibtnDel btn btn-md btn-danger "  value="Delete"></td>';
            newRow.append(cols);
            $("table.table-bordered").append(newRow);
            counter++;
        });

        $("table.table-bordered").on("click", ".ibtnDel", function (event) {
            $(this).closest("tr").remove();
            counter -= 1
        });
    });
</script>

